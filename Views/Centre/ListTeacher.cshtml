@model IEnumerable<UserModel>
@{

    ViewData["Title"] = "Teachers";
}
<br />
<div class="card mb-3">
    <div class="text-center">
        Centre 
    </div>
    <div class="card text-center">
        <p1> Centre   Name         :@ViewBag.CentreName</p1>
        <p2> Centre   Email        :@ViewBag.Email</p2>
        <p1>Centre   Cell Number  :@ViewBag.Cell</p1>
    </div>

    <div class="card-body">
        <div class="text-center">
            Centre Manger
        </div>
        <h5>
            CenterManager Name :@ViewBag.MangerName
        </h5>
        <h5>
            CenterSurname     :@ViewBag.MangerSurname
        </h5>
    </div>
</div>


@if (Model.Any())
{
    <table class="table table-hover table-responsive table-responsive-sm table-responsive-xl table-responsive-md table-striped ">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Fname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CellNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fname)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellNo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="ProgramNameList" asp-route-Email="@item.Email">Programs</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

