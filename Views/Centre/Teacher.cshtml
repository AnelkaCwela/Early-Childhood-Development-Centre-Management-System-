@model TeacherModel

@{
    ViewData["Title"] = "Register Teacher";
}



<h4 class="card-header">Register Teacher</h4>
<hr />
<div class="card-body">
    <form asp-action="Teacher" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserName" />
        <div class="form-group">
            <label asp-for="tittleModel" class="control-label"></label>
            <select asp-for="tittleModel" class="form-control" asp-items="Html.GetEnumSelectList<TittleModel>()">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="tittleModel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="QualificationId" class="control-label"></label>
            <select asp-for="QualificationId" class="form-control" asp-items="ViewBag.QualificationId"></select>
        </div>
        <div class="form-group">
            <label asp-for="Profile" class="control-label"></label>
            <div class="custom-file">

                <input type="file" asp-for="Profile" class="form-control custom-file-input" />
                <label asp-for="Profile" class="custom-file-label">Chose-File...</label>
                <span asp-validation-for="Profile" class="text-danger">
                    @ViewBag.B
                </span>
            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-info" />
        </div>
    </form>
</div>
