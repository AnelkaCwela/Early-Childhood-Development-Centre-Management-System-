@model RegionModel
@{
    ViewData["Title"] = "Region";
}
<br />
<div class="card text-center">
    Region
</div>
<br />
<form asp-action="Region" method="post">
    <div class="form-group">
        <label asp-for="RegionName" class="control-label"></label>
        <input asp-for="RegionName" class="form-control" />
        <span asp-validation-for="RegionName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProvinceId" class="control-label"></label>
        <select asp-for="ProvinceId" id="ProvinceId" class="form-control" asp-items=" ViewBag.ProvinceId"></select>
        <span asp-validation-for="ProvinceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" name="Save" value="Save" class="btn btn-primary" />
    </div>
</form>
