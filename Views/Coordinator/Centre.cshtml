@model CentreModel

@{
    ViewData["Title"] = "Register Centre";
}



<h4 class="card-header text-center">
    Register Centre 
    @ViewBag.A
</h4>
<hr />
<div class="card-body">
    <form asp-action="Centre" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SuburbId" />
        <div class="form-group">
            <label asp-for="CentreName" class="control-label"></label>
            <input asp-for="CentreName" placeholder="Enter Centre Name" class="form-control card" />
            <span asp-validation-for="CentreName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CentreNo" class="control-label"></label>
            <input asp-for="CentreNo" placeholder="Centre Cell Number" class="form-control card" />
            <span asp-validation-for="CentreNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CentreFaxNo" class="control-label"></label>
            <input asp-for="CentreFaxNo" placeholder="Fax Number" class="form-control card" />
            <span asp-validation-for="CentreFaxNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CentraEmail" class="control-label"></label>
            <input asp-for="CentraEmail" placeholder="Email address" class="form-control card" />
            <span asp-validation-for="CentraEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-info" />
        </div>
    </form>
</div>
