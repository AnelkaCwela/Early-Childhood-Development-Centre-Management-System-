@model IEnumerable<CoodinatorViewModel>
@{

    ViewData["Title"] = "Centremanger";
}
<div class="card text-center">
    List of Active  Centremanger
</div>
<br />
<div>
    <a class="btn btn-sm btn-dark" asp-controller="Coordinator" asp-action="Ind">Not Active Centremanger</a>
</div>
<br />
@if (Model.Any())
{
    <table class="table table-hover table-responsive table-responsive-sm table-responsive-xl table-responsive-md table-striped ">
        <thead>
            <tr>

                <th>
                    Statuse
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CellNo)
                </th>
                <th>
                    Centre
                </th>
                <th>
                    Profile
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    @if (item.Active == true)
                    {
                        <td>
                            Active
                        </td>
                    }
                    else
                    {
                        <td>
                            In-Active
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Fname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Lname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CellNo)
                    </td>
                    <td>

                        <select asp-for="@item.RegionId" disabled class="form-control" asp-items="ViewBag.CentreId"></select>

                    </td>
                    <td>
                        <span class="img-responsive">
                            <img class="img-rounded img-responsive" role="img" src="data:image/jpg;base64,@System.Convert.ToBase64String(item.Profile)" width="100" height="100" asp-append-version="true" />
                        </span>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-danger" asp-controller="Coordinator" asp-action="DeActive" asp-route-id="@item.UserName">De Activate</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card-footer"> No Active Coodinator  Yet</div>

}
