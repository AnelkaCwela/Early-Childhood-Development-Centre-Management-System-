@model ParentModel


@{
    Layout = "_LayoutCopy";
    ViewData["Title"] = "Address";
}
<div class="card text-center">
    Address
    @ViewBag.A
</div>
<hr />
<div class="card-body">
    <form asp-action="Address" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="UserName" type="hidden" />
        <div class="form-group">
            <label asp-for="IdNo" class="control-label"></label>
            <input asp-for="IdNo" placeholder="Identity number" class="form-control card" />
            <span asp-validation-for="IdNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="relationShip" class="control-label"></label>
            <select asp-for="relationShip" class="form-control" asp-items="Html.GetEnumSelectList<RelationShip>()">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="relationShip" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressLine1" class="control-label"></label>
            <input asp-for="AddressLine1" placeholder="Address Line 1" class="form-control card" />
            <span asp-validation-for="AddressLine1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressLine2" class="control-label"></label>
            <input asp-for="AddressLine2" placeholder="Addres Line 2" class="form-control card" />
            <span asp-validation-for="AddressLine2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" placeholder="City" class="form-control card" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="PostalCode" class="control-label"></label>
            <input asp-for="PostalCode" placeholder="Enter Post Code" class="form-control card" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="SignUp" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}