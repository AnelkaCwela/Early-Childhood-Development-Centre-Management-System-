@model ChangeEmailModel

@{
    ViewData["Title"] = "Change Password";
}



<h4 class="card-header">Change Email</h4>
<hr />
<div class="card-body">
    <form asp-action="ChangePassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CurrentPassord" class="control-label"></label>
            <input asp-for="CurrentPassord" placeholder="Enter Password" class="form-control card" />
            <span asp-validation-for="CurrentPassord" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewEmail" class="control-label"></label>
            <input asp-for="NewEmail" placeholder="Email" class="form-control card" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmEmail" class="control-label"></label>
            <input asp-for="ConfirmEmail" placeholder="Confirm Email" class="form-control card" />
            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-info" />
        </div>
    </form>

</div>
@*</div>*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
