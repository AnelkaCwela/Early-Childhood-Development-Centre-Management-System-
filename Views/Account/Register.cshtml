@model RegisterModel

@{
    ViewData["Title"] = "Registration";
}
<div class="card text-center">
    <h5> Registration</h5>
    @ViewBag.A
</div>
<hr />
<div class="card-body">
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" placeholder="Name" class="form-control card" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" placeholder="Surname" class="form-control card" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" placeholder="Email address" class="form-control card" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CellNo" class="control-label"></label>
            <input asp-for="CellNo" placeholder="Email address" class="form-control card" />
            <span asp-validation-for="CellNo" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" placeholder="Enter Password" class="form-control card" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control card" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="SignUp" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
