@model MarksModel

@{
    ViewData["Title"] = "Mark";
}

<div class="card mb-3">
    <div class="card-header text-center">
        Pupuil Details
    </div>
    <div class="card-body">
        
        <h5>
            Pupil  Name     :@ViewBag.Name
        </h5>
        <h5>
            Pupil Surname  :@ViewBag.LastName
        </h5>>
    </div>
</div>

<h4 class="card-header">Assign Teacher to Program</h4>
<hr />
<div class="card-body">
    <form asp-action="AddMark" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EnroleId" />
        <input type="hidden" asp-for="PupilId" />
        <div class="form-group">
            <label asp-for="Mark" class="control-label"></label>
            <input asp-for="Mark" class="form-control card" />
            <span asp-validation-for="Mark" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="taskId" class="control-label"></label>
            <select asp-for="taskId" class="form-control" asp-items="ViewBag.taskId"></select>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-info" />
        </div>
    </form>
</div>