@model PupilModel

@{
    ViewData["Title"] = "Apply for Admission";
}
<div class="card text-center">
    Apply for Admission
    @ViewBag.A
</div>
<hr />
<div class="card-body">
    <form asp-action="Apply" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Fname" class="control-label"></label>
            <input asp-for="Fname" placeholder="First Name" class="form-control card" />
            <span asp-validation-for="Fname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lname" class="control-label"></label>
            <input asp-for="Lname" placeholder="Last Name" class="form-control card" />
            <span asp-validation-for="Lname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DOB" class="control-label"></label>
            <input asp-for="DOB" class="form-control" />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdentityNo" class="control-label"></label>
            <input asp-for="IdentityNo" placeholder="Identity Number" class="form-control card" />
            <span asp-validation-for="IdentityNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GanderId" class="control-label"></label>
            <select asp-for="GanderId" class="form-control" asp-items="ViewBag.GanderId"></select>
        </div>
        <div class="form-group">
            <label asp-for="CentreId" class="control-label"></label>
            <select asp-for="CentreId" class="form-control" asp-items="ViewBag.CentreId"></select>
        </div>
        <div class="form-group">
            <label asp-for="birthDocument" class="control-label"></label>
            <div class="custom-file">
                <input type="file"  asp-for="birthDocument" class="form-control custom-file-input" />
                <label asp-for="birthDocument" class="custom-file-label">Chose-File...</label>
                <span asp-validation-for="birthDocument" class="text-danger">
                    @ViewBag.B
                </span>
            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Apply" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
