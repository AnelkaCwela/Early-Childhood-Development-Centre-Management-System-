@model StatusModel

@{
    ViewData["Title"] = "Statuse";
}
<div class="card text-center">
    Statuse
    @ViewBag.A
</div>
<hr />
<div class="card-body">
    <form asp-action="Createstatus" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Statuse" class="control-label"></label>
            <input asp-for="Statuse" class="form-control card" />
            <span asp-validation-for="Statuse" class="text-danger"></span>
        </div>       
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
