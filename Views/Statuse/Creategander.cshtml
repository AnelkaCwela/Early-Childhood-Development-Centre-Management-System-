@model GanderModel

@{
    ViewData["Title"] = "Gander";
}
<div class="card text-center">
   Gander
    @ViewBag.A
</div>
<hr />
<div class="card-body">
    <form asp-action="Creategander" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Gander" class="control-label"></label>
            <input asp-for="Gander"  class="form-control card" />
            <span asp-validation-for="Gander" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>